<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:style/Theme.Material.Light.NoActionBar" />

    <style name="StatusText" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="AdviceText" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TemperatureText" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">62sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="TemperatureUnitText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">31sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="TemperatureLabelText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="SensorValuesText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="SensorValuesUnitText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/varela_round</item>
    </style>

    <style name="SensorValuesLabelText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>
</resources>
