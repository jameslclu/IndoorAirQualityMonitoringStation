<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout">

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Quality Monitoring" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optimum living temperature is between 19 and 22 degrees. \n Thresholds: 17, 22, 25 and 27 degrees." />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relative Humidity (RH)" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The ideal relative humidity for health and comfort is about 40–50%. In the winter months, it may have to be lower than 40% RH to avoid condensation on the windows. Thresholds: 30%, 40%, 50% and 60%." />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atmospheric Pressure" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informative value, does not pose any risks at normal levels." />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO2" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Concentration of CO2 in Earth's atmosphere is about 410 ppm (parts per million). Concentrations up to 800 ppm are typical for occupied indoor spaces. At over 1000 ppm, complaints of drowsiness and poor air start to occur. Thresholds: 800 and 1000 ppm." />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TVOC" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TVOC means the total concentration of multiple VOCs (Volatile Organic Compounds) present simultaneously in the air. Generally, TVOC concentrations between 50 ppb (parts per billion) and 300 ppb are thought to be acceptable.  Similarly, it's often recommended that indoor air TVOC concentrations not exceed 500 ppb. Thresholds: 300 and 500 ppb." />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM 2.5" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM2.5 refers to atmospheric particulate matter (PM) that have a diameter of less than 2.5 micrometers, which is about 3% the diameter of a human hair. Studies have found a close link between exposure to fine particles and premature death from heart and lung disease. Acceptable levels are up to 30 μg/m3, levels above 50 μg/m3 are unhealthy. Thresholds: 30 and 50 μg/m3." />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM 10" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM with diameter between 2.5 and 10 micrometers. These particles are still inhalable and can contribute to heart and lung diseases. Acceptable levels are up to 100 μg/m3, levels above 200 μg/m3 are unhealthy. Thresholds: 100 and 200 μg/m3." />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In case of any request or suggestion for this device, you can contact the author at romannovosad11@gmail.com." />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>